@page "/components/alert"
@using BlazorUI.Components.Alert
@using BlazorUI.Components.Separator
@using BlazorUI.Icons.Lucide.Components

<PageTitle>Alert Component - BlazorUI</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Alert Component</h1>
            <p class="text-xl text-muted-foreground">
                Displays a callout for important messages that attract user attention.
            </p>
        </div>
    </div>

    <!-- Default Alert -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Default</h2>
            <p class="text-sm text-muted-foreground">
                Standard alert for informational messages.
            </p>
        </div>
        <Alert>
            <AlertTitle>Heads up!</AlertTitle>
            <AlertDescription>
                You can add components to your app using the CLI.
            </AlertDescription>
        </Alert>
    </div>

    <!-- Destructive Alert -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Destructive</h2>
            <p class="text-sm text-muted-foreground">
                Alert for errors or critical warnings.
            </p>
        </div>
        <Alert Variant="AlertVariant.Destructive">
            <AlertTitle>Error</AlertTitle>
            <AlertDescription>
                Your session has expired. Please log in again.
            </AlertDescription>
        </Alert>
    </div>

    <!-- With Icons -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Icons</h2>
            <p class="text-sm text-muted-foreground">
                Alerts can include icons for visual emphasis.
            </p>
        </div>
        <div class="space-y-4">
            <Alert>
                <Icon>
                    <LucideIcon Name="terminal" Class="h-4 w-4" />
                </Icon>
                <ChildContent>
                    <AlertTitle>Heads up!</AlertTitle>
                    <AlertDescription>
                        You can add components to your app using the CLI.
                    </AlertDescription>
                </ChildContent>
            </Alert>

            <Alert Variant="AlertVariant.Destructive">
                <Icon>
                    <LucideIcon Name="circle-alert" Class="h-4 w-4" />
                </Icon>
                <ChildContent>
                    <AlertTitle>Error</AlertTitle>
                    <AlertDescription>
                        Your session has expired. Please log in again.
                    </AlertDescription>
                </ChildContent>
            </Alert>
        </div>
    </div>

    <!-- Usage Examples -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Common Use Cases</h2>
            <p class="text-sm text-muted-foreground">
                Alerts for various notification scenarios.
            </p>
        </div>
        <div class="space-y-4">
            <!-- Success-like -->
            <Alert>
                <Icon>
                    <LucideIcon Name="circle-check" Class="h-4 w-4" />
                </Icon>
                <ChildContent>
                    <AlertTitle>Success</AlertTitle>
                    <AlertDescription>
                        Your changes have been saved successfully.
                    </AlertDescription>
                </ChildContent>
            </Alert>

            <!-- Info -->
            <Alert>
                <Icon>
                    <LucideIcon Name="info" Class="h-4 w-4" />
                </Icon>
                <ChildContent>
                    <AlertTitle>Note</AlertTitle>
                    <AlertDescription>
                        This feature is currently in beta. Some functionality may change.
                    </AlertDescription>
                </ChildContent>
            </Alert>

            <!-- Warning -->
            <Alert Variant="AlertVariant.Destructive">
                <Icon>
                    <LucideIcon Name="triangle-alert" Class="h-4 w-4" />
                </Icon>
                <ChildContent>
                    <AlertTitle>Warning</AlertTitle>
                    <AlertDescription>
                        Your account is approaching its storage limit.
                    </AlertDescription>
                </ChildContent>
            </Alert>
        </div>
    </div>

    <!-- API Reference -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
        </div>
        <div class="border rounded-lg p-6 space-y-4">
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">Variant</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">AlertVariant</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    The visual style variant. Options: Default, Destructive.
                </p>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">Icon</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">RenderFragment?</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    Optional icon to display in the alert.
                </p>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">Class</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string?</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    Additional CSS classes to apply to the alert.
                </p>
            </div>
        </div>
    </div>
</div>
