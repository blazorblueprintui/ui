@namespace BlazorBlueprint.Components.Input
@implements IDisposable

<input
    id="@Id"
    name="@EffectiveName"
    type="@HtmlType"
    class="@CssClass"
    value="@(Type == InputType.File ? null : Value)"
    placeholder="@Placeholder"
    disabled="@Disabled"
    required="@Required"
    aria-label="@AriaLabel"
    aria-describedby="@AriaDescribedBy"
    aria-invalid="@EffectiveAriaInvalid"
    @oninput="HandleInput"
    @onchange="HandleChange" />
