@namespace BlazorUI.Primitives.Combobox
@implements IAsyncDisposable
@inject IJSRuntime JS

@* Combobox root component - headless, unstyled behavior only *@
<CascadingValue Value="@_context" IsFixed="false">
    <div @attributes="AdditionalAttributes">
        @ChildContent
    </div>
</CascadingValue>

@code {
    private ComboboxContext _context = new();
    private UseControllableState<string> _state = null!;

    /// <summary>
    /// The child content to render within the combobox context.
    /// Typically includes ComboboxInput and ComboboxContent.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional attributes to apply to the root element.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    /// <summary>
    /// The current search query (controlled mode).
    /// When null, the combobox manages its own state (uncontrolled mode).
    /// </summary>
    [Parameter]
    public string? SearchQuery { get; set; }

    /// <summary>
    /// Event callback invoked when the search query changes.
    /// Use with @bind-SearchQuery for two-way binding.
    /// </summary>
    [Parameter]
    public EventCallback<string> SearchQueryChanged { get; set; }

    /// <summary>
    /// Default search query when in uncontrolled mode.
    /// </summary>
    [Parameter]
    public string DefaultSearchQuery { get; set; } = string.Empty;

    /// <summary>
    /// Event callback invoked when the search query changes.
    /// Receives the new query as a parameter.
    /// </summary>
    [Parameter]
    public EventCallback<string> OnSearchQueryChange { get; set; }

    /// <summary>
    /// Event callback invoked when an item is selected.
    /// Receives the selected value as a parameter.
    /// </summary>
    [Parameter]
    public EventCallback<string> OnValueChange { get; set; }

    /// <summary>
    /// Whether the combobox is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    /// <summary>
    /// Custom filter function for items.
    /// If provided, overrides the default Contains matching.
    /// </summary>
    [Parameter]
    public Func<ComboboxItemMetadata, string, bool>? FilterFunction { get; set; }

    protected override void OnInitialized()
    {
        // Initialize controllable state for search query
        _state = new UseControllableState<string>(DefaultSearchQuery)
        {
            ControlledValue = SearchQuery ?? string.Empty,
            OnValueChanged = SearchQueryChanged,
            IsControlled = SearchQueryChanged.HasDelegate
        };

        // Sync initial values to context
        _context.State.SearchQuery = _state.Value;
        _context.State.Disabled = Disabled;
        _context.FilterFunction = FilterFunction;

        // Subscribe to context search query changes
        _context.OnSearchQueryChange = async (newQuery) =>
        {
            await _state.SetValueAsync(newQuery);

            if (OnSearchQueryChange.HasDelegate)
            {
                await OnSearchQueryChange.InvokeAsync(newQuery);
            }

            StateHasChanged();
        };

        // Subscribe to context value changes (item selection)
        _context.OnValueChange = async (value) =>
        {
            if (OnValueChange.HasDelegate)
            {
                await OnValueChange.InvokeAsync(value);
            }
        };

        // Subscribe to context state changes
        _context.OnStateChanged += HandleContextStateChanged;
    }

    protected override void OnParametersSet()
    {
        // Update disabled state
        if (_context.Disabled != Disabled)
        {
            _context.SetDisabled(Disabled);
        }

        // Update filter function
        if (_context.FilterFunction != FilterFunction)
        {
            _context.FilterFunction = FilterFunction;
        }

        // Update controlled search query if it changed
        if (_state.IsControlled)
        {
            _state.ControlledValue = SearchQuery ?? string.Empty;
            if (_context.State.SearchQuery != SearchQuery)
            {
                _context.State.SearchQuery = SearchQuery ?? string.Empty;
            }
        }
    }

    private void HandleContextStateChanged()
    {
        // When context state changes (e.g., from ComboboxInput),
        // notify parent if SearchQuery is being controlled
        if (SearchQueryChanged.HasDelegate)
        {
            var newQuery = _context.SearchQuery;
            if (SearchQuery != newQuery)
            {
                _ = SearchQueryChanged.InvokeAsync(newQuery);
            }
        }

        StateHasChanged();
    }

    public async ValueTask DisposeAsync()
    {
        _context.OnStateChanged -= HandleContextStateChanged;
        await Task.CompletedTask;
    }
}
