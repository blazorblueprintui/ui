@namespace BlazorUI.Primitives.Collapsible

<button type="button"
        data-state="@(Context?.Open ?? false ? "open" : "closed")"
        aria-expanded="@(Context?.Open ?? false)"
        disabled="@(Context?.Disabled ?? false)"
        @onclick="HandleClick"
        @onkeydown="HandleKeyDown"
        @attributes="AdditionalAttributes">
    @ChildContent
</button>
