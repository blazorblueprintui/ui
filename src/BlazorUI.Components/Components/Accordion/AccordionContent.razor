@namespace BlazorUI.Components.Accordion
@using BlazorUI.Primitives.Accordion

@*
    Styled AccordionContent component.
    Wraps the AccordionContent primitive with shadcn/ui styling.
*@

<BlazorUI.Primitives.Accordion.AccordionContent ForceMount="@ForceMount"
                                                      class="@CssClass">
    <div class="pb-4 pt-0">
        @ChildContent
    </div>
</BlazorUI.Primitives.Accordion.AccordionContent>

@code {
    /// <summary>
    /// Whether to force mount the content even when closed.
    /// </summary>
    [Parameter]
    public bool ForceMount { get; set; } = false;

    /// <summary>
    /// The child content to render when the item is open.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the content.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    private string CssClass =>
        $"overflow-hidden text-sm transition-all data-[state=closed]:animate-accordion-up data-[state=open]:animate-accordion-down {Class}".Trim();
}
